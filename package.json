    "dom-css": "^2.1.0",
    "flatten": "^1.0.2",
    "is-array": "^1.0.1",
    "is-number": "^2.1.0",
    "is-string": "^1.0.4",
    "lodash": "^4.17.20",
    "lodash.multipermutations": "^1.0.0",
